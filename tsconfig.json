{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": ["node"],
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@*": ["./*"]
        }
    },
    "exclude": ["./node_modules"],
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts"
    ]
}
